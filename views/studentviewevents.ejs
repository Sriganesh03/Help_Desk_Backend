<%- include('layout/studentheader')%>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if(eventdetails!= "") { %>
                    <table class="table table-striped text-center my-1">
                        <thead>
                            <tr class="table-dark">
                                <th>S. NO</th>
                                <th>Event Id</th>
                                <th>Image</th>
                                <th>Event Name</th>
                                <th>Event Date</th>
                                <th>Venue</th>
                                <th>Organised By</th>
                                <th>Department</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% eventdetails.forEach((row,index)=>{ %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%= row.eventid %></td>
                                    <td><img src="<%= row.image %>" height="70px"></td>
                                    <td><%= row.eventname %></td>
                                    <td><%= row.eventdate %></td>
                                    <td><%= row.venue %></td>
                                    <td><%= row.organised %></td>
                                    <td><%= row.department %></td>
                                    <td><%= row.description %></td>
                                    <td>
                                        <a href="/studenteditevent/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/student deleteevent/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                   <h1 class="text-center text-secondary mt-5">No Events Found</h1> 
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/studentfooter')%>