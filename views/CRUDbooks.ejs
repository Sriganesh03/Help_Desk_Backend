<%- include('layout/header')%>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if(bookdetails!= "") { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>S. NO</th>
                                <th>Book Id</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookdetails.forEach((row,index)=>{ %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%= row.bookid %></td>
                                    <td><img src="<%= row.image %>" height="70px"></td>
                                    <td><%= row.bookname %></td>
                                    <td><%= row.author %></td>
                                    <td><%= row.department %></td>
                                    <td><%= row.status %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                   <h1 class="text-center text-secondary mt-5">No Books Found</h1> 
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')%>